                                            td.order-total $841.00
                                        tr
                                            td.order-pic
                                                img(src='app/img/dummy.png')
                                            td.order-item-name Lorem Ipsum dolor
                                            td.order-qty
                                                input.form-control(type='text', name='checkout-qty', value='1')
                                            td.order-price $825.00
                                            td.order-tax $16.00
                                            td.order-total $841.00
                            .mt-lg
                                button.btn.btn-info(type='button', ng-click="chk.step1 = true") Submit Order
