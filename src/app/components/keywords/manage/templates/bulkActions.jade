#bulk-actions.mda-list.p0.shadow-z3.bg-white
    .mda-list-item
        label.pull-left Bulk Actions
    .mda-list-item(ng-repeat='item in listc.bulkActions', ng-click='listc.performAction(item.label)', ng-class='item.class')
        em.fa.pull-left(ng-class='item.icon')
        span.pull-left {{ item.label }}
        span.pull-right(ng-if='item.class!=undefined') {{listc.minForcedPromotion}}/{{listc.maxForcedPromotion}}
        #force-setting.container-fluid.shadow-z3.p0(ng-click='$event.stopPropagation()')
            .row.m0
                .col-xs-7.text-center.p-sm
                    span Pages:  Min
                    input.m0.p0.form-control(type='number', min='0', ng-model='listc.minForcedPromotion')
                .col-xs-5.text-center.p-sm
                    span Max
                    input.m0.p0.form-control(type='number', min='0', ng-model='listc.maxForcedPromotion')