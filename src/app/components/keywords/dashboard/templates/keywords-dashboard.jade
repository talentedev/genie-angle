#keyDashboard.container-fluid.panel.mb0(ng-controller='dashboardController as dac')
    .panel-heading.custom-heading.flex-heading
        .description Keywords&nbsp;Dashboard
        .panel-title.dashboard-title
            select(selectpicker='', data-live-search='true', ng-model='dac.site.selected')
                option.text-bold(ng-repeat='site in dac.sites') {{ site.name }}
    .panel-wrapper.fill
        .panel-body.row.pb0.pr0.m0
            .col-lg-5.col-sm-12.pl0
                #statistics.panel
                    .panel-heading.flex-heading.sub-heading
                        .panel-title 
                            | Statistics
                            span.text-underline {{ dac.site.selected }}
                        paneltool(tool-collapse, ng-init="statistics=false")
                    .panel-wrapper(uib-collapse="statistics")
                        .panel-body.p0
                            ul.list-group.m0
                                li.list-group-item(ng-repeat='item in dac.analyzeKeywords')
                                    span.badge.bg-info.text-center {{ item.value }}
                                    | {{ item.name }}
                #searchEngine.panel(ng-controller='searchEngineCtrl as sec')
                    .panel-heading.flex-heading.sub-heading
                        .panel-title 
                            | Search Engines to 
                            span.text-underline {{ dac.site.selected }}
                        paneltool(tool-collapse, ng-init="searchEngine=false")
                    .panel-wrapper(uib-collapse="searchEngine")
                        .panel-body
                            .row.serp-title
                                | Monitored Search Engine
                                em.icon-question
                            .row.serp-item(ng-repeat='item in sec.seViews')
                                .col-xs-4.dropup
                                    select(selectpicker='', data-live-search='true', ng-model='item.selectedEngine', ng-change="sec.changeDomains(item)")
                                        option(ng-repeat='engine in item.engines', data-icon='{{engine.icon}}') {{ engine.name }}
                                .col-xs-7.p0.dropup
                                    select(selectpicker='', data-live-search='true', ng-model='item.selectedDomain', ng-options='(item.selectedEngine + domain.Name) for domain in item.domains', ng-change="sec.selectDomain(item)", data-size="8")
                                .col-xs-1.pl0
                                    em.fa.fa-check(ng-if='item.domainSelected')
                                    .spinner(ng-show='item.domainChecking')
                                        .bounce1
                                        .bounce2
                                        .bounce3
                            .row.col-xs-12.comment
                                em Please select up to 3 search engines to monitor your Keywords SERP ranking positions
            .col-lg-7.col-sm-12.pl0
                #chartsPanel.panel
                    .panel-heading.flex-heading.sub-heading
                        .panel-title
                            | SERP Ranking
                            span.text-underline {{ dac.site.selected }}
                        paneltool(tool-collapse, ng-init="chartsPanel=false")
                    .panel-wrapper(uib-collapse="chartsPanel")
                        .panel-body.pt0
                            div(hc-charts='', options='dac.chartOptions')
                            .chart-filter
                                label.report-date.pull-left Report Date: {{ dac.reportDate }}
                                label.pull-right.dropup
                                    select(selectpicker='', ng-model='dac.selectedDay', ng-options='(day.name + " Days") for day in dac.filterDays')