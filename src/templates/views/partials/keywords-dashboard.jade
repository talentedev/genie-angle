#keyDashboard.container-fluid.panel(ng-controller='dashboardController as dac')
    .panel-heading
        .panel-title
            select(selectpicker='', data-live-search='true', ng-model='dac.site.selected', title='Keywords Dashboard for Site:')
                option.text-bold(ng-repeat='site in dac.sites') Keywords Dashboard for Site: {{ site.name }}
        paneltool(tool-close)
    .panel-wrapper
        .panel-body.row
            .col-md-5
                ul.list-group.shadow-z1
                    li.list-group-item(ng-repeat='item in dac.analyzeKeywords')
                        span.badge.bg-primary.text-center {{ item.value }}
                        | {{ item.name }}
                ul.list-group
                    li.list-group-item.no-border
                        | Monitored Search Engines For Website
                        button.btn.btn-oval.btn-default.pull-right.shadow-z2(ng-click='kc.searchEngineOpenDialog()')
                            i.fa.fa-cog
                    li.list-group-item.no-border
                        | Add Keywords...
                        button.btn.btn-default.btn-outline.pull-right.shadow-z2(ng-click='kc.addKeywordsOpenDialog()')
                            i.fa.fa-plus
            .col-md-7
                .panel.panel-default.panel-dark.charts-panel
                    .panel-heading.container-fluid
                        i.fa.fa-line-chart.pull-left
                        .panel-title.text-bold.col-md-8.col-xs-8
                            select(selectpicker='', data-live-search='true', ng-model='dac.site.selected', title='Aggregated SERP Keywords Ranking for Site:')
                                option.text-bold(ng-repeat='site in dac.sites') Aggregated SERP Keywords Ranking for Site: {{ site.name }}
                        .date-filter.col-md-3.col-xs-3
                            select(selectpicker='', data-live-search='true', ng-model='dac.filterDays.selected', title='Days:')
                                option.text-bold(ng-repeat='filterDay in dac.filterDays') Days: {{ filterDay.name }}
                    .panel-wrapper
                        .panel-body
                            div(hc-charts='', options='dac.chartOptions')
                            p.report-date.text-bold Report Date: {{ dac.reportDate }}

