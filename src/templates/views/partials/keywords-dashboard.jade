#keyDashboard.container-fluid.panel.panel-dark(ng-controller='dashboardController as dac')
    .panel-heading
        .panel-title.text-bold
            ui-select.text-right(ng-model='dac.site.selected', theme='bootstrap', ng-disabled='dac.disabled')
                ui-select-match(placeholder='Keywords Dashboard for Site:') Keywords Dashboard for Site: {{ $select.selected.name }}
                ui-select-choices(repeat='site in dac.sites | propsFilter: {name: $select.search}')
                    div(ng-bind-html='site.name | highlight: $select.search')
        paneltool(tool-side-collapse, tool-close)
    .panel-wrapper
        .panel-body.row
            .col-md-5
                ul.list-group.shadow-z1
                    li.list-group-item(ng-repeat='item in dac.analyzeKeywords')
                        span.badge.bg-primary.text-center {{ item.value }}
                        | {{ item.name }}
                ul.list-group
                    li.list-group-item.no-border
                        | Monitored Search Engines For Website
                        i.fa.fa-cog.pull-right(ng-click='kc.searchEngineOpenDialog()')
                    li.list-group-item.no-border
                        | Add Keywords...
                        button.btn.btn-primary.pull-right(ng-click='kc.addKeywordsOpenDialog()')
                            i.fa.fa-plus
            .col-md-7
                .panel.panel-default.panel-dark.charts-panel
                    .panel-heading.container-fluid
                        i.fa.fa-line-chart.pull-left
                        .panel-title.text-bold.col-md-8
                            ui-select.text-right(ng-model='dac.site.selected', theme='bootstrap', ng-disabled='dac.disabled')
                                ui-select-match(placeholder='Aggregated SERP Keywords Ranking for Site:') Aggregated SERP Keywords Ranking for Site: {{ $select.selected.name }}
                                ui-select-choices(repeat='site in dac.sites | propsFilter: {name: $select.search}')
                                    div(ng-bind-html='site.name | highlight: $select.search')
                        .date-filter.col-md-2
                            ui-select.text-right(ng-model='dac.filterDays.selected', theme='bootstrap', ng-disabled='dac.disabled')
                                ui-select-match(placeholder='Days:') Days: {{ $select.selected.name }}
                                ui-select-choices(repeat='filterDay in dac.filterDays | propsFilter: {name: $select.search}')
                                    div(ng-bind-html='filterDay.name | highlight: $select.search')
                        //- paneltool(tool-collapse, tool-dismiss, ng-init="keyDashboard=true")
                    .panel-wrapper
                        .panel-body
                            div(hc-charts='', options='dac.chartOptions')
                            p.report-date.text-bold Report Date: {{ dac.reportDate }}

